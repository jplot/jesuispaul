<%# locals: ( text: '', link: '#', media: '', alt: '', disabled: false ) %>
<div class="card-body p-1 rounded-2 border border-2 border-dark position-relative">
    <p class="card-text text-center text-dark fw-lighter mb-2"><%= text %></p>
    <%= image_tag(media, alt: alt, height: 70, width: 'auto', class: 'mx-auto d-block') %>
    <a href="<%= link %>" target="_blank"><i class="bi bi-box-arrow-up-right text-dark"></i></a>
    <%= tag.div(class: 'disabled-overlay') if disabled %>
</div>
